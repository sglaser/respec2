/* --- PERMALINKS --- */
{{#if permalinkHide}}
    section > *:hover > span.permalink {
        visibility: visible;
    }
{{/if}}

.permalink {
    width:          1px;
    height:         1px;
    overflow:       visible;
    font-size:      10pt;
    font-style:     normal;
    vertical-align: middle;
    margin-left:    4px;
    {{#if permalinkEdge}}
        float:      right;
    {{/if}}
    {{#if permalinkHide}}
        visibility: hidden;
    {{/if}}
}

span.permalink > a,
span.permalink > a:link,
span.permalink > a:visited,
span.permalink > a:hover,
span.permalink > a:focus,
span.permalink > a:active
{
    background:       transparent !important;
    text-decoration:  none;
    font-weight:      normal;
    color:            grey !important;
}

.permalink abbr {
    border:0;
}

{{#if permalinkHide}}
    @media print {
        .permalink,
        section > *:hover > span.permalink {
            visibility: hidden;
        }
    }
{{/if}}
